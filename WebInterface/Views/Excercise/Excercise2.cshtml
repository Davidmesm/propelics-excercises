@{
    ViewData["Title"] = "Excercise 2";
}

<br>
<br>
<h1>Excercise 2</h1>
<br>
<br>
<div class="alert alert-warning">
    Write a function that receives an hour and a minute from an analog clock and calculates the
    inner angle between them.
</div>
<br>
<br>
@if(ViewBag.Result != null)
{
    <div class="alert alert-success">Result : @ViewBag.Result</div>
}
else if(ViewBag.Error != null)
{
    <div class="alert alert-danger">Error : @ViewBag.Error</div>
}
else
{
    @using(Html.BeginForm())
    {
        <div class="form-group">
            <label>Hour</label>
            @Html.TextBox("hour", "", new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>Minutes</label>
            @Html.TextBox("minutes", "", new { @class = "form-control" })
        </div>
        <button type="submit" class="btn btn-primary">Run</button>
    }
}
