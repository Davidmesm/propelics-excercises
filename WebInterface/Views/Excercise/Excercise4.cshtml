@{
    ViewData["Title"] = "Excercise 4";
}

<br>
<br>
<h1>Excercise 4</h1>
<br>
<br>
<div class="alert alert-warning">
    Write a function that, given two strings, test whether one is an anagram of the other.
</div>
<br>
<br>
@if(ViewBag.Result != null)
{
    <div class="alert alert-success">Result : @ViewBag.Result</div>
}
else if(ViewBag.Error != null)
{
    <div class="alert alert-danger">Error : @ViewBag.Error</div>
}
else
{
    @using(Html.BeginForm())
    {
        <div class="form-group">
            <label>First Word</label>
            @Html.TextBox("wordOne", "", new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>Second Word</label>
            @Html.TextBox("wordTwo", "", new { @class = "form-control" })
        </div>
        <button type="submit" class="btn btn-primary">Run</button>
    }
}
